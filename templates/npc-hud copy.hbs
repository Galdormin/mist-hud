<div class="npc-hud">
    {{#unless isCollapsed}}
    <div class="npc-content">

        {{#if hasDescriptionBiography}}
        <div class="npc-description-biography accordion-container">
            <div class="npc-subtitle-container-c accordion-header active">
                <span class="npc-subtitle-text">Description & Biography</span>
            </div>
            <div class="accordion-content active">
                {{{descriptionBiography}}}
            </div>
        </div>
        {{/if}}


        <!-- Spectrums Section -->
        <div class="npc-subtitle-container-c">
            <div class="npc-subtitle-text">{{spectrumLabel}}</div>
        </div>
        <ul class="npc-spectrum-list">
            {{#each spectrums}}
            <li><span class="npc-spectrum">{{name}}: <span class="npc-spectrum-tier">{{parseMaxTier system.maxTier}}</span></span></li>
            {{/each}}
        </ul>

        {{#if statuses.length}}
            <div class="npc-subtitle-container-c">
                <div class="npc-subtitle-text">Tags & Statuses</div>
            </div>
            <div class="npc-tags-statuses-container">
                <ul class="npc-storytags-list">
                    {{#each storyTags}}
                    <li class="mh-story-tag {{this.cssClass}} no-wrap" data-id="{{this.id}}" data-temporary="{{this.temporary}}" data-permanent="{{this.permanent}}">
                        <span class="mh-burn-toggle {{this.cssClass}}">{{{this.burnIcon}}}</span>
                        {{#if temporary}}‚è±Ô∏è{{/if}}
                        {{#if permanent}}üíé{{/if}}
                        <span class="mh-tags">{{this.tagName}}</span>
                    </li>
                    {{/each}}
                </ul>
                <ul class="npc-statuses-list">
                    {{#each statuses}}
                    <li>
                        <div class="mh-status {{#if selected}}selected{{/if}} {{statusType}}" data-status-name="{{statusName}}" data-tier="{{statusTier}}" data-temporary="{{temporary}}" data-permanent="{{permanent}}">
                            {{#if temporary}}‚è±Ô∏è {{/if}}
                            {{#if permanent}}üíé {{/if}}
                            {{statusName}}-{{statusTier}}
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}

        <div class="npc-moves-section">
            <!-- Title stays fixed -->
            <div class="npc-subtitle-container-c">
                <div class="npc-subtitle-text">
                    {{#if (eq activeSystem 'city-of-mist')}}
                        MC Moves
                    {{else}}
                        Threats and Consequences
                    {{/if}}
                </div>
            </div>

            <!-- Scrollable content -->
            <div class="npc-moves-container">
                {{#each moveGroups as |moves subtype|}}
                <div class="npc-move-type">
                    <div class="npc-subtitle-container-l npc-subtitle-text">{{subtype}}</div>
                    <ul class="npc-list">
                        {{#each moves}}
                        <li>
                            {{#unless system.hideName}}
                                <span class="npc-move-name">{{name}}</span> -
                            {{/unless}}
                            <span class="npc-move-description">{{parseStatus system.description}}</span>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/unless}}
</div>
