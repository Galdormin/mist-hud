<form class="status-screen">
    
    <div class="status-screen-header">
        <div class="statuses-screen-title">Statuses List</div>
        <button type="button" class="mh-import-json"><i class="fas fa-file-import"></i>Import</button>
        <button type="button" class="mh-reset-json"><i class="fas fa-undo"></i>Reset</button>
    </div>

    
    {{#each statuses as |category|}}
    <div class="status-category-list">
        <div class="npc-status-group">{{category.status_type}}:</div>
        <ul>
            {{#each category.status_scale as |status|}}
            <li class="npc-status">{{status}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
</form>

