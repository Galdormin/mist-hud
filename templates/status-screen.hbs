<form class="status-screen">
    
    <div class="status-screen-header">
        <div class="statuses-screen-title" title="Drag and drop statuses onto tokens.">Statuses List</div>
        <button type="button" class="mh-sample-csv" title="Download a sample CSV to create your own status list."><i class="fa-regular fa-file-export"></i>Get Sample</button>
        <button type="button" class="mh-import-csv" title="Import a CSV file to replace the current list."><i class="fas fa-file-csv"></i> Import CSV</button>
        {{!-- <button type="button" class="mh-import-json"><i class="fa-regular fa-file-import"></i>Import JSON</button> --}}
        <button type="button" class="mh-reset-json" title="Reset to the default status list."><i class="fas fa-undo"></i>Reset</button>
    </div>

    
    {{#each statuses as |category|}}
    <div class="status-category-list">
        <div class="npc-status-group">{{category.status_type}}:</div>
        <ul>
            {{#each category.status_scale as |status|}}
            <li class="npc-status">{{status}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
</form>

